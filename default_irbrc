# Default settings obtained by running the following from a clean version of irb
# > puts IRB.conf[:PROMPT]
IRB.conf[:PROMPT][:CUSTOM] = {
 :PROMPT_I=>"%N(%m):%03n:%i> ", 
 :PROMPT_N=>"%N(%m):%03n:%i> ", 
 :PROMPT_S=>"%N(%m):%03n:%i%l ", 
 :PROMPT_C=>"%N(%m):%03n:%i* ", 
 :RETURN=>"=> %s\n"
}
IRB.conf[:PROMPT_MODE] = :CUSTOM
IRB.conf[:AUTO_INDENT] = true

